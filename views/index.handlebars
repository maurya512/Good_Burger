<div class="main-container">
  {{!-- <img src="/assets/img/Black-Bean-Burger-with-Fries.jpg" alt="burger with fries"> --}}
  <h1 style="font-family: 'Sans-serif', bold; color: rgb(235, 115, 115)">Good Burger</h1>
</div>

<div class="container">
  <div class="centered" class="list">
    <h2>Burgers Ready to be devoured!</h2>

    <ul class="list-group" style="align-content: center;
	align-content: center; ">
      {{#each burgers}}
      {{#unless devour}}
      {{!-- <li class="list-group-item list-group-item"></li> --}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container">
  <div class="centered">
    <h2>Devoured Burgers!</h2>

    <ul class="list-group">
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container">
  <div class="centered" class="list">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Type:</label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devour">Whacthu gon do bout it?</label><br>
        {{!-- <input type="radio" name="devour" value="1" checked> Devoured!<br> --}}
        <input type="radio" name="devour" value="0"> Ready to be Devoured
      </div>

      <button type="submit" class="btn btn-warning">Add Burger</button>
    </form>
  </div>
</div>